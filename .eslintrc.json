{
  "env": {
    "browser": true,
    "es6": true
  },
  "extends": ["eslint:recommended", "plugin:react/recommended"],
  "globals": {
    "Atomics": "readonly",
    "SharedArrayBuffer": "readonly"
  },
  "parserOptions": {
    "ecmaFeatures": {
      "jsx": true
    },
    "ecmaVersion": 2018,
    "sourceType": "module"
  },
  "plugins": ["react"],
  "rules": {
    "quotes": [1, "single", { "avoidEscape": true }],
    "indent": [2, 4],
    "no-else-return": 1,
    "semi": [2, "always"],
    "no-trailing-spaces": 1,
    "eol-last": 1,
    "consistent-return": 2,
    "object-curly-spacing": [2, "always"],
    "react/prop-types": 0
  },
  "settings": {
    "react": {
      "version": "detect"
    }
  }
}
